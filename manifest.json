{
  "manifest_version": 2,
  "name": "YouTube Video Button",
  "version": "1.0",
  "description": "Adds a button next to YouTube video titles that shows subtitles when clicked",
  "permissions": ["*://*.youtube.com/*"],
  "web_accessible_resources": ["injected.js"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}